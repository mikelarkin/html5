<% content_for :title do %>
<h2>Welcome! This project serves as a series of warm up exercises around simply animation concepts.
</h2>
<ul>
  <li><%= link_to "Bouncing Ball", bounce_path %><span>A simple demonstration of a bouncing ball with controllable slope.</span></li>
</ul>
<% end %>

<script type="text/javascript">
function draw() {
	// Get our canvas
	var c = document.getElementById("myCanvas");
	var ctx = c.getContext("2d");
	for(i = 0; i < 100; i++) {
		   ctx.beginPath();
	       ctx.moveTo(Math.floor(Math.random()*1000), Math.floor(Math.random()*600));
	       ctx.lineTo(Math.floor(Math.random()*100), Math.floor(Math.random()*600));
	       ctx.stroke();
	}	
}

setTimeout('draw()', 500);

</script>